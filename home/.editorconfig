# ==============================================================================
# EditorConfig
# ==============================================================================
# Consistent coding styles across editors and IDEs
# https://editorconfig.org
# ==============================================================================

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,zsh,bash}]
indent_size = 2

# Python
[*.py]
indent_size = 4

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Markdown (preserve trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Go (must use tabs)
[*.go]
indent_style = tab

# Ruby
[*.rb]
indent_size = 2

# Rust
[*.rs]
indent_size = 4
